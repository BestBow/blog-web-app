<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trivialities</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.cdnfonts.com/css/chunkfive" rel="stylesheet">
</head>
<body>
    <header class="header-gradient">
        <div class="container d-flex justify-content-between align-items-center py-2">
            <div class="fw-bold header-item">BASICS</div>
            <div class="fw-bold fs-4 header-title">TRIVIALITIES ðŸŒ±</div>
            <div class="fw-bold header-item">ESSENCE</div>
        </div>
    </header>

    <main class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-6 d-flex justify-content-center align-items-center illustration-container">
                <img src="/tree-illustration.png" alt="Illustration" class="illustration">
            </div>

            <div class="col-md-6">
                <div class="recents-label mb-3">RECENTS â†’</div>
                <div class="row g-3">
                    <% blogPosts.forEach((post, index) => { %>
                        <div class="col-6">
                            <div class="post-box p-3 h-100">
                                <h5><%= post.title %></h5>
                                <p><%= post.content %></p>
                                <div class="d-flex justify-content-between">
                                    <a href="/edit/<%= index %>" class="btn btn-light btn-sm">Edit</a>
                                    <form action="/delete/<%= index %>" method="POST">
                                        <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer-gradient"></footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
